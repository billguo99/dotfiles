# transparent i3lock
# set $i3lockwall sh ~/.config/i3/scripts/lock.sh
# bindsym Control+Mod1+l exec --no-startup-id $i3lockwall

# keybinding to lock screen
bindsym Shift+$mod+x exec "i3lock -c 000000"

# auto lock the screen
exec "xautolock -detectsleep -time 30 -locker \"i3lock -c 000000\""

# shutdown / restart / suspend...
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (CTRL+s) shutdown

mode "$mode_system" {
    bindsym l exec --no-startup-id $i3lockwall, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $i3lockwall && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $i3lockwall && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Ctrl+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+BackSpace mode "$mode_system"

# floating pop up automatically
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="systemsettings"] floating enable

# Dropdown/Scratpad Terminal
exec --no-startup-id alacritty --title __scratch --option background_opacity=0.96 &
for_window [class="Alacritty" title="__scratch"] floating enable, resize set 1600 800, move scratchpad, border pixel 4
bindsym $mod+grave [class="Alacritty"] scratchpad show, move position center

